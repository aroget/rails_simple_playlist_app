<div class="row">
  <div class="col-xs-12 col-sm-6 offset-sm-3">
    <%= form_with model: @genre do |form| %>
      <div class="form-group">
        <%= form.label :name %><br>
        <%= form.text_field :name, class:"form-control" %>
      </div>

      <%= form.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
