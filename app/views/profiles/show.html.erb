<div class="row">
  <div class="col-8">
    <h2>Profile <small class="text-muted"><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></small></h2>
  </div>
  <div class="col-4 text-sm-right">
    <%= link_to "Back to Artist", artists_path, class: "btn btn-link" %>
    <% if current_user.id.to_i == @profile.id.to_i %>
      <%= link_to "Edit", edit_profile_path(@profile), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-8">
    <div class="row">
      <div class="col-5">
        <div>
          <%= image_tag(@profile.avatar, size: "120x120") %>
        </div>
        <br/>
        <h4><%= @user.user_name %></h4>
        <br/>

        <p>
          Likes: <span class="text-muted"><%= @user.likes.count %></span>
          <%= link_to 'View All', profile_likes_path(@user.profile.id), class: 'badge badge-default float-right' %>
        </p>

        <p>
          Playlists:
          <span class="text-muted"><%= @user.playlists.count %></span>
          <%= link_to 'View All', playlists_path(author: @user.id), class: 'badge badge-default float-right' %>
        </p>

        <p>Email: <span class="text-muted"><%= @user.email %></span></p>

        <% if @profile.country %>
        <p>Country: <span class="text-muted"><%= @profile.country %></span></p>
        <% end %>

        <p>Joined: <span class="text-muted"><%= @user.created_at.to_formatted_s(:long) %></span></p>
      </div>
      <div class="col-7">
        <h5>About</h5>
        <p><%= @profile.bio %></p>
      </div>
    </div>
  </div>
</div>