<div class="row">
  <div class="col-xs-12 col-sm-6 offset-sm-3">
  <%= form_for @playlist do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-check">
      <%= f.label :public, class: "form-check-label" do %>
        <%= f.check_box :public, class: "form-check-input" %> <%= f.label :public %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :tag %>

      <%= f.select :tag, options_for_select(@tags.map { |tag| [tag.name, tag.id] }, @playlist.tag_id ? @playlist.tag_id : nil), class: "form-control" %>
    </div>



    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>