<div class="row">
  <div class="col-xs-12 col-sm-6 offset-sm-3">
    <%= form_with model: @artist do |form| %>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>

      <div class="form-group">
        <%= form.label :name %><br>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :country %><br>
        <%= form.text_field :country, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :bio %><br>
        <%= form.text_area :bio, class: "form-control" %>
      </div>

      <%= form.submit class: "btn btn-primary float-sm-right" %>
    <% end %>
  </div>
</div>
